<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewbg"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/record_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        android:text="Update Record"
        android:textColor="#fff"
        android:textSize="30dp"

        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/Update_Enter_Systolic_pressure"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/record_tv"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Systolic Pressure"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="#000000" />



    <EditText
        android:id="@+id/Update_Enter_Diastolic_pressure"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Update_Enter_Systolic_pressure"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Diastolic Pressure "
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/Update_Enter_Heart_Rate"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Update_Enter_Diastolic_pressure"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Enter heart rate"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/Update_Enter_Measure_Time"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Update_Enter_Heart_Rate"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Measured time"
        android:inputType="time"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/Update_Enter_Measure_Date"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Update_Enter_Measure_Time"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Measured Date"
        android:inputType="date"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/Update_Enter_Comment"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Update_Enter_Measure_Date"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Enter Comment"
        android:inputType="textMultiLine"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Update_Enter_Comment"

        android:layout_centerHorizontal="true"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="UPDATE"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:id="@+id/Update_UpdateButton"
            >
        </Button>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="DELELTE"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Update_DeleteButton"
            >
        </Button>
    </LinearLayout>


</RelativeLayout>